mixin burger()
  .burger-menu
        .burger-menu__overlay
        .burger-menu__container
            .burger-menu__close
            ul.burger-menu__list
                li.burger-menu__item: a(href='#') О проекте
                li.burger-menu__item: a(href='#') Мы рекомендуем
