mixin item(tag, title, type, subtitle)
  .item-preview(class= type)
    .item-preview__img
      a(href='#')
          img(src='http://via.placeholder.com/630x336' alt='')
    .item-preview__info
      a(href='#').item-preview__tag= tag
      a(href='#').item-preview__title= title
      if subtitle
        .item-preview__subtitle= subtitle

