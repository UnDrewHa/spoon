.pagination
  display flex
  justify-content space-between
  margin 60px 0 40px
  padding 0
  @media (min-width: $tablet)
    justify-content center
    align-items center
  &__item
    margin 0
    list-style-type none
    @media (max-width: $tablet - 1)
      display none
    @media (min-width: $tablet)
      border-bottom 4px solid transparent
      display flex
      justify-content center
      align-items center
      height 64px
      text-align center
      width 50px
      a
        color $c-title
        display block
        height 100%
        font 16px/63px $roboto-c
        width 100%
        &:hover
          color $c-accent
      &._active
        border-color $c-accent
    &._disabled
      opacity .25
      pointer-events none
    &._prev
    &._next
      display block
      font bold 14px/1 $roboto-c
      text-transform uppercase
      a
        color $c-accent
      svg
        display none
      @media (min-width: $tablet)
        a
          font-size 0
          display flex
          justify-content center
          align-items center
          height 100%
        svg
          display block
          fill $c-accent
          width 36px
          