.page
  flex 1
  &__wrapper
    margin 0 auto

    > * + *
      margin 20px 0 0
      @media (min-width: $tablet)
        margin 35px 0 0
    @media (max-width: $tablet - 1)
      padding 0 10px
    @media (min-width: $tablet)
      max-width 768px
      padding 0 20px
    @media (min-width: $desktop)
      max-width 1000px
  &__row
    @media (min-width: $desktop)
      display flex
  &-main
    min-width 0

    > * + *
      margin 20px 0 0
      @media (min-width: $tablet)
        margin 35px 0 0
    
  &-sidebar
    margin 20px 0 0
    > * + *
      margin 20px 0 0
      @media (min-width: $tablet) and (max-width: $desktop - 1)
        margin 35px 0 0
          
    @media (min-width: $desktop)
      flex 0 0 300px
      margin 0 0 0 30px
      width 300px
      
  &-header
    color $c-title
    font 30px/1.3 $roboto-c
    margin 30px 0 0
    text-align center
    @media (min-width $tablet)
      font-size 36px

.section-page
  body
    padding 50px 0 0
    @media (min-width: $desktop)
      padding 81px 0 0
