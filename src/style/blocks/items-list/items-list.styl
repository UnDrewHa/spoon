.items-list
  @media (min-width: $tablet)
    display flex
  > * + *
    margin 20px 0 0
    @media (min-width: $tablet)
      margin 35px 0 0
  &__title
    color $c-title
    font 22px/1.2 $roboto-c
    text-align center
    text-transform uppercase
    width 100%
    @media (min-width: $tablet)
      font-size 32px
    @media (min-width: $desktop)
      font-size 18px
  &._top3
    @media (min-width: $tablet)
      display block
    @media (min-width: $desktop)
      > * + *
        margin 20px 0 0
      .items-list__title + .item-preview
        margin-top 10px    
  &._double
    @media (min-width: $tablet)
      .item-preview
        width 349px
        & + .item-preview
          margin 0 0 0 30px
  &._triple
    @media (min-width: $tablet)
      flex-wrap wrap
      justify-content space-between
      .item-preview
        margin 0
        width 349px
        &:nth-of-type(n+3)
          margin-top 30px
    @media (min-width: $desktop)
      .item-preview
        width 300px
        &:nth-of-type(n+3)
          margin 0
        &:nth-of-type(n+4)         
          margin 30px 0 0
  &._list21
    @media (min-width: $tablet)
      ._center
        margin 0 0 0 30px
        width 232px
        .item-preview__title
          font-size 18px
        .item-preview__info
          padding-right 0
    @media (min-width: $desktop)
      ._center
        margin 0 0 0 30px
        width 300px
        .item-preview__title
          font-size 22px
        .item-preview__info
          padding-right 20px      
          padding-left 20px
  &._read-more
    .items-list__title
      text-transform none
      font-size 28px
      @media (min-width: $desktop)
        font-size 36px
                    
          
