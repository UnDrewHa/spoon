.items-list
  @media (min-width: 768px)
    display flex
  > * + *
    margin 20px 0 0
    @media (min-width: 768px)
      margin 35px 0 0
  &__title
    color $c-title
    font 22px/1.2 $roboto-c
    text-align center
    text-transform uppercase
    @media (min-width: 768px)
      font-size 32px
    @media (min-width: 1020px)  
      font-size 18px
  &._top3
    @media (min-width: 768px)
      display block
    @media (min-width: 1020px)  
      > * + *
        margin 20px 0 0
      .items-list__title + .item-preview
        margin-top 10px    
  &._double
    @media (min-width: 768px)
      .item-preview
        width 349px
        & + .item-preview
          margin 0 0 0 30px
  &._triple
    @media (min-width: 768px)
      flex-wrap wrap
      justify-content space-between
      .item-preview
        margin 0
        width 349px
        &:nth-of-type(n+3)
          margin-top 30px
    @media (min-width: 1020px)
      .item-preview
        width 300px
        &:nth-of-type(n+3)
          margin 0
        &:nth-of-type(n+4)         
          margin 30px 0 0
  &._list21
    @media (min-width: 768px)
      .item-preview:not(._main)
        margin 0 0 0 30px
        width 232px
        .item-preview__title
          font-size 18px
        .item-preview__info
          padding-right 0
    @media (min-width: 1020px)
      .item-preview:not(._main)
        margin 0 0 0 30px
        text-align center
        width 300px
        .item-preview__tag
          left 50%
          transform translateX(-50%)
        .item-preview__title
          font-size 22px
        .item-preview__info
          padding-right 20px      
          padding-left 20px
          
