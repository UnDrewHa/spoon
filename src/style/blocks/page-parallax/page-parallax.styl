.page-parallax
  display block
  height 200px
  margin 20px 0
  position relative
  @media (min-width: $tablet)
    height 400px
    margin 35px 0
  &__img
    height 100%
    position relative
    &::before
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      background rgba(0,0,0, .5)
      content ''
      display block
      z-index 1
  &__title
    position absolute
    top 50%
    left 50%
    right 0
    color #fff
    font 22px/1.3 $roboto-c
    margin 0 auto
    text-align center
    transform translate(-50%,-50%)
    text-transform uppercase
    z-index 2
    &::before
      position absolute
      bottom -30px
      left 0
      right 0
      background $c-accent
      content ''
      display block
      height 3px
      margin 0 auto
      width 60px
    @media (min-width: $tablet)
      font-size 50px
      &::before
        height 4px
        bottom -60px
  &:hover
    .page-parallax__title
      color $c-accent