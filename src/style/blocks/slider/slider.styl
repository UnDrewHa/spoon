.slider
    margin 54px 0
    padding 0
    position relative
    text-align center
    .slick-slide
      img
        display inline-block
    .slider-arrow
      position absolute
      top 50%
      cursor pointer
      display flex
      justify-content center
      align-items center
      height 50px
      transform translateY(-50%)
      width 50px
      z-index 1
      @media (min-width $tablet)
        height 74px
        width 90px
      svg
        display block
        fill $c-accent
        transition transform .3s ease
        width 37px  
    &__prev
      left 0
      @media (min-width: 1000px) and (max-width: 1200px)
        left 0
      @media (min-width: 1201px)
        left -100px
      
      &:hover
        svg
          @media (min-width: 1025px)
            transform translateX(-15px)
    &__next
      right 0
      @media (min-width: 1000px) and (max-width: 1200px)
        right 0
      @media (min-width: 1201px)
        right -100px

      &:hover
        svg
          @media (min-width: 1025px)
            transform translateX(15px)  
        
    p
    &__caption
      color $c-title
      font bold 18px/1.3 $roboto-c
      margin 0
      padding .8em 0 0
      a
        color inherit
        &:hover
          text-decoration underline