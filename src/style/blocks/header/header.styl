.header
  background #fff
  @media (max-width: 1019px)
    height 50px
    padding 10px 0 0
  @media (min-width: 1020px)
    height 143px
    padding 30px 0 0  
  &-logo
    background url('../i/logo.png') 50% no-repeat
    background-size cover
    margin 0 auto
    height 39px
    width 109px
    @media (min-width: 1020px)
      height 64px
      width 179px
    h1
      border: 0;
      clip: rect(0 0 0 0);
      height: 1px;
      margin: -1px;
      overflow: hidden;
      padding: 0;
      position: absolute;
      width: 1px;
  nav
    @media (min-width: 1020px)
      display block
    @media (max-width: 1019px)
      position absolute
      top 0
      right 0
      display flex
      justify-content center
      align-items center
      height 50px
      width 50px
  &__burger
    @media (max-width: 1019px)
      cursor pointer
      height 44px
      position relative
      width 44px
      span
      &::before
      &::after
        position: absolute;
        left: 50%;
        background: $c-title
        display: block;
        height: 2px;
        margin-left: -10px;
        width: 20px
      span
        top: 21px
      &::before
      &::after 
        content: '';
        transform-origin: 50%;
        transition: top .2s ease .1s,bottom .2s ease .1s
      &::before
        top: 14px
      &::after
        bottom: 14px
  &-nav
    @media (max-width: 1019px)
      display none
    @media (min-width: 1020px)
      display block
      margin 20px 0 0
      padding 0
      text-align center
      &__item
        display inline-block
        margin 0
        padding 0
        & + .header-nav__item
          margin 0 0 0 21px
        a
          color $c-title
          font 13px/1 $roboto-c
          text-transform uppercase
          &:hover
          &:active
            color $c-accent  
            







