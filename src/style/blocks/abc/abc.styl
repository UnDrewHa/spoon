.abc
  &-filter
    ul
      display flex
      justify-content center
      margin 20px 0 0
      padding 0
      @media (max-width: $tablet - 1)
        display none
    &__item
      font 12px/1.3 $roboto-c
      list-style-type none
      margin 0
      padding 0
      text-transform uppercase
      a
        color $c-accent
        display block
        padding 0 7px
        &:hover
        &:active
          color $c-title-dark
      &._selected
        a  
          color $c-title
    &__select
      margin 20px auto 0
      width 300px
      @media (min-width: $tablet)
        display none
        
  &-list
    display flex
    justify-content center
    margin 20px 0 0
    padding 0
    @media (max-width: 640px)
      display none
    > li
      font 16px/1 $roboto-c
      list-style-type none
      margin 0
      padding 0
      text-transform uppercase
      a
        color #fff
        display block
        padding 0 6px        
        &:hover
          color $c-accent
    > ._active
      a
        color $c-accent   
  &-form
    background url('../i/abc_bg.jpg') 0 50% no-repeat
    background-size cover
    margin 40px 0
    position relative
    @media (min-width: 641px)
      height 450px
    &::after
      position absolute
      bottom 50px
      left 0
      right 0
      background $c-accent
      content ''
      display block
      height 4px
      margin 0 auto
      width 104px
    &__wrapper
      margin 0 auto
      padding 100px 20px
      @media (min-width: 641px)
        padding 163px 20px 0
      @media (min-width: $tablet)
        width 768px
      @media (min-width: $desktop)
        width 1000px
    &__field
      margin 0 0 77px
      position relative  
    &__input
      background transparent
      border none
      border-bottom 1px solid rgba(255,255,255,.5)
      color #fff
      display block
      font 36px/1.2 $roboto-c
      outline none
      padding 0 50px 17px 0
      width 100%
      &::placeholder
        color #fff
        font 36px/1.2 $roboto-c
        opacity 1
    &__button
      position absolute
      top 0
      right 0
      background transparent
      border 0
      cursor pointer
      display flex
      justify-content flex-end
      align-items center
      height 50px
      outline none
      padding 0
      width 50px
      svg
        height 26px
        fill $c-accent
        width 26px
      &:hover
        svg
          fill $c-title
      