.article
  &__subtitle
    color $c-title
    font italic 300 20px/1.3 $roboto-c
    padding 0 20px
    text-align center
    @media (min-width 768px)
      font-size 26px
      padding 0 90px
  &-social  
    background tomato
    height 44px
    margin 40px auto
    width 300px
  &-content
    &._wine
      @media (min-width: 768px)
        display flex
        .wine-preview
          flex 0 0 300px
          margin 0 30px 0 0
          width 300px
        .wysiwyg
          flex-grow 1
          min-width 0
          > *
            margin 0 0 20px
            padding 0
  &-footer
    border-top 1px solid $c-lines  
    border-bottom 1px solid $c-lines  
    padding 25px 50px
    &__item
      color $c-title
      font 16px/26px $roboto-c
      text-transform uppercase
      + .article-footer__item
        margin 10px 0 0
      a
        color $c-accent
        font-family $roboto
        margin 0 0 0 35px
        &:hover
          color $c-title
        + a
          margin 0 0 0 10px
      &._tags
        a
          border 1px solid $c-slider-dots
          border-radius 3px
          display inline-block    
          padding 2px 10px
          &:hover
            border-color $c-title