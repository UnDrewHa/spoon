.wysiwyg
  color #000
  font 15px/1.44 $roboto
  padding 0
  text-align justify
  @media (min-width 768px)
    font-size 18px
  > *
    margin 0 0 20px
    padding 0 20px
    @media (min-width 768px)
      margin 0 0 30px
      padding 0 50px
  img
    margin-left auto
    margin-right auto
    max-width 100%
    padding 0
  .slider
    padding 0
    position relative
    .slider-arrow
      position absolute
      top 50%
      cursor pointer
      display flex
      justify-content center
      align-items center
      height 74px
      transform translateY(-50%)
      width 90px
      z-index 1
    &__prev
      left 0
      @media (min-width: 1000px)
        left -100px  
      &::before
        background url('../i/prev_arrow.png') 50% no-repeat
        background-size 19px 37px
        content ''
        display block
        height 37px
        transition transform .3s ease
        width 19px
      &:hover::before
        transform translateX(-15px)  
    &__next
      right 0
      @media (min-width: 1000px)
        right -100px  
      &::before
        background url('../i/next_arrow.png') 50% no-repeat
        background-size 19px 37px
        content ''
        display block
        height 37px
        transition transform .3s ease
        width 19px
      &:hover::before
        transform translateX(15px)  
        
    p
    &__caption
      color $c-title
      font bold 18px/1.3 $roboto-c
      margin .8em 0 0     
      text-align center
  