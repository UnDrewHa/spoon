.hero
  height 300px
  position relative
  @media (min-width: 768px)
    height 450px
  @media (min-width: 1020px)
    height 515px
  
  &__img
    height 200px
    overflow hidden
    a
      display block
      height 100%
    img
      position relative
      left 50%
      height 100%
      max-width 200%
      transform translateX(-50%)
      width auto  
    @media (min-width: 768px)
      height 350px
    @media (min-width: 1020px)
      height 450px
  &__info
    position absolute
    bottom 25px
    left 10px
    right 10px
    background #fff
    t_radius(10px)
    margin 0 auto
    min-height 100px
    max-width 400px
    padding 0 15px 0
    text-align center
    @media (min-width: 768px)
      left 20px
      right 20px
      t_radius()
      min-height 105px
      max-width 728px
      padding 0 40px 0
    @media (min-width: 1020px)
      max-width 1000px
      padding 0 150px 0
  &__tag
    border-top 4px solid $c-accent
    color $c-accent
    display inline-block  
    font 12px/1 $roboto-c
    padding 11px 0 0
    text-transform uppercase
  &__title
    color $c-title
    display block
    font 24px/1.3 $roboto-c  
    @media (min-width: 768px)
      font-size 32px
    @media (min-width: 768px)
      font-size 36px