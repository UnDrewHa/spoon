.button
    background $c-accent
    border 0
    border-radius 10px 0 10px 0
    color #fff
    cursor pointer
    display block
    height 48px
    font 16px/47px $roboto-c
    outline none
    margin 0 auto
    text-align center
    text-transform uppercase
    width 280px
    &:hover
      background $c-title