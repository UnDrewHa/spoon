.select
  border 1px solid $c-lines
  border-radius 2px
  overflow hidden
  position relative
  width 300px
  height 40px
  &:after
    content ''
    background url('../i/select_arrow.svg') no-repeat 0 0
    width 16px
    height 16px
    pointer-events none
    position absolute
    top 50%
    transform translateY(-50%)
    right 5px
    z-index 1

  & select
    background rgba(255,255,255,0)
    border none
    border-radius 0
    color #000000
    font 14px/39px $roboto
    outline none
    padding-left 10px
    padding-right 30px
    position relative
    z-index 3
    top -1px
    left -1px
    width 100%
    height 100%
    -webkit-appearance none
    -moz-appearance none
    appearance none
    -webkit-user-select none
    -moz-user-select -moz-none
    -ms-user-select none
    user-select none
    &:focus
      background rgba(255,255,255,0)
      color $c-accent
    &:hover
      cursor pointer

    & option
      background-color #ffffff
      color #000000
      display block
      font 14px/16px $roboto

    & option:disabled
      color #999 !important

  & .icon
    background-color $c-lines
    background-position 3px
    color #000000
    display inline-block
    font 14px/16px $roboto
    font-weight bold
    text-align center
    width 26px
    height 25px
    pointer-events none
    position absolute
    left 0
    top 0
    z-index 2

  &._white
    border-color #ffffff
    &:after
      background-image embedurl('select_arrow_white.svg')
    & select
      color #ffffff
      &:focus
        color #ffffff !important
      &:-moz-focusring
        color transparent !important
        text-shadow 0 0 0 #ffffff !important

select:-moz-focusring
  color transparent !important
  text-shadow 0 0 0 #000000
  & option
    text-shadow none

select:focus::-ms-value
  background transparent
  color #000000

select::-ms-expand
  display none